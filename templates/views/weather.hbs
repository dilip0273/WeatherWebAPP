            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thu";
            weekday[5] = "Fri";
            weekday[6] = "Sat";
        
            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day')
            day.innerText = days;
        };
        getCurrentDay();
